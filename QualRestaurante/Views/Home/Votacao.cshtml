@model QualRestaurante.Models.VotacaoViewModel

@{
    ViewBag.Title = "Pagina Inicial";
}

<hr/>

<div class="row">
    @foreach (var item in Model.Restaurantes)
    {
<div class="col-md-4">
            <h2>@item.Nome</h2>
            <p>Preço: R$ @item.Preco</p>
            <p>Votos: @item.NumeroDeVotos(DateTime.Now)</p>
            @if (!Model.JaVotou)
            {
                @Html.ActionLink("Votar", "Votar", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-default" })
            }
        </div>
    }
</div>