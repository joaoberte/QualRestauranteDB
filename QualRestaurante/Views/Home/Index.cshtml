@model QualRestaurante.Models.ResultadoViewModel

@{
    ViewBag.Title = "Pagina Inicial";
}

<div class="container">
    <div class="col-md-3"></div>
    <div class="col-md-6 jumbotron" style="margin-top:20pt;">
        @if (Model.Escolhido != null)
        {
            <h2>Restaurante de Hoje:</h2>
            <h3>@Model.Escolhido.Nome</h3>
            <p>Preço: R$ @Model.Escolhido.Preco</p>
            <p>Votos: @Model.Escolhido.NumeroDeVotos(DateTime.Now)</p>
        }
        else
        {
            <p>Nenhum voto registrado até o momento.</p>
        }
    </div>
    <div class="col-md-3"></div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h4>Restaurantes já escolhidos na semana</h4>
            @foreach (var item in Model.RestaurantesJaEscolhidos)
            {
                <p>@item.Nome</p>
            }
        </div>
        <div class="col-md-3"></div>
    </div>
</div>